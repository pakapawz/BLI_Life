<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_list"
    tools:context=".AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_list">

        <TextView
            android:id="@+id/textView_userAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:text="Your Account" />

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/textView_ProfileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:text="Username" />

        <EditText
            android:id="@+id/editText_editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_ProfileUsername"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:background="#1AFFFFFF"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:hint="Edit your username"/>


        <TextView
            android:id="@+id/textView_ProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_editUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="Email" />

        <TextView
            android:id="@+id/textView_ProfileClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_ProfileEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="Class" />

        <Button
            android:id="@+id/button_saveChanges"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_ProfileClass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/button_rounded_green"
            android:text="Save Changes"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.718" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_saveChanges"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded_red"
            android:text="Log Out"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.834" />

        <TextView
            android:id="@+id/textView_VerifyMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_userAccount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:text="Email is not verified."
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="35dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_Verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_VerifyMsg"
            android:layout_marginTop="427dp"
            android:text="Email is Verified."
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="35dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_verifyNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_VerifyMsg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#40000000"
            android:text="Verify Now"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#80FFFFFF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.718" />

    </RelativeLayout>

</ScrollView>